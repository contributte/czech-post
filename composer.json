{
  "name": "contributte/czech-post",
  "description": "Czech Post API client",
  "keywords": [
    "nette",
    "czechpost",
    "api",
    "client"
  ],
  "type": "library",
  "license": "MPL-2.0",
  "homepage": "https://github.com/contributte/czech-post",
  "authors": [
    {
      "name": "Tomáš Sedláček",
      "homepage": "https://github.com/kedlas"
    },
    {
      "name": "Marek Bartoš",
      "homepage": "https://marek-bartos.cz"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "ext-simplexml": "*",
    "guzzlehttp/guzzle": "^6.3.3",
    "nette/di": "~2.4.12",
    "nette/utils": "~2.5.2"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "phpunit/phpunit": "^7.2.6",
    "phpstan/phpstan-shim": "^0.11",
    "phpstan/phpstan-deprecation-rules": "^0.11",
    "phpstan/phpstan-nette": "^0.11",
    "phpstan/phpstan-strict-rules": "^0.11"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\CzechPost\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Cases\\Contributte\\CzechPost\\": "tests/cases",
      "Tests\\Toolkit\\Contributte\\CzechPost\\": "tests/toolkit"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tests": [
      "phpunit tests --colors=always"
    ],
    "coverage": [
      "phpdbg -qrr vendor/bin/phpunit tests --colors=always -c tests/coverage.xml"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  }
}
